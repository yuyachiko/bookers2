<%= render 'layouts/validate',book: book  %>
<div class="row">
   <!--ここから-->

     <div class="col-md-3">

        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

        <table class="table">
            <tbody>
              <tr>
            	  <th>name</th>
            	  <th><%= user.name %></th>
              </tr>
              <tr>
            	  <th>introduction</th>
            	  <th><%= user.introduction %></th>
              </tr>
          </tbody>
      </table>

        <div class="row">
          <%= link_to '',edit_user_path(user.id),class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
        </div>

        <div class="form">
          <h2 class="mt-3">New book</h2>
          <%= form_with model: book,url:books_path , local: true do |f| %>
              <%= f.label :title %><br>
              <%= f.text_field :title ,class: 'form-control book_title'%>
<br>
              <%= f.label :body %><br>
              <%= f.text_area :body,class: 'form-control book_body' %>

              <%= f.submit 'Create Book',class: 'btn btn-success mt-3' %>
          <% end %>
        </div>
      </div>
      <!--ここまで-->