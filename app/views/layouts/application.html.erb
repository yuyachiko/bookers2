<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!--fontawesome-->
  <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>



  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <a class="nav-brand"><span>Bookers</span></a>
            <div class="row">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                     <!--user-homeページ-->
                  <li><%= link_to "Home",user_path(current_user.id),class: 'fas fa-home nav-link text-light' %></li>
                  <!--user一覧-->
                  <li><a class="fas fa-users nav-link text-light" href="/users"> Users</a></li>
                  <!--books一覧-->
                  <li><%= link_to "Books",books_path,class: 'fas fa-book-open nav-link text-light' %></li>
                  <!--home＃top-->
                  <li><%= link_to "logout",destroy_user_session_path,class: 'fas fa-sign-out-alt nav-link text-light',method: :delete%></li>


                <% else %>
                  <li><%= link_to "Home",root_path,class: 'fas fa-home nav-link text-light' %></li>
                  <li><%= link_to "About",about_path,class: 'fas fa-link nav-link text-light'%></li>
                  <li><%= link_to "sign up",new_user_registration_path,class: 'fas fa-user-plus nav-link text-light' %></li>
                  <li><%= link_to "login",new_user_session_path,class: 'fas fa-sign-in-alt nav-link text-light' %></li>

                <% end %>
              </ul>
          </div>
          </div>
    </nav>
  </header>

    <main>
      <p><%= render 'layouts/notification' %></p>
        <div class="container">
          <%= yield %>
        </div>
    </main>

    <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
  </body>


</html>
